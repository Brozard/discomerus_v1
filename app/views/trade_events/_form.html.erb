<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
      <div class="form-bottom">
        <strong><h1>Create New Trade Event</h1></strong>
          <%= form_for(setup_addressable(@trade_event)) do |f| %>
            <% if @trade_event.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@trade_event.errors.count, "error") %> prohibited this trade_event from being saved:</h2>
                <ul>
                  <% @trade_event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <br>
              <%= f.text_field :event_name, placeholder: "Event Name (required)", size:'35px' %>
            </div><br>
            <div class="field">
              <%= f.label :start_date %><br>
              <%= f.date_select :start_date,
                {:order => [:month, :day, :year], :start_year => 2000, :end_year => (Date.current.year + 5), include_blank: true},
                {:class => "search-field force-black-text"}
              %>
            </div>
            <div class="field">
              <%= f.label :end_date %><br>
              <%= f.date_select :end_date,
                {:order => [:month, :day, :year], :start_year => 2000, :end_year => (Date.current.year + 5), prompt: true},
                {:class => "search-field force-black-text"}
              %>
            </div><br>
            <!-- beginning of address fields -->
            <%= f.fields_for :address do |ff| %>
              <div class="field">
                <%= ff.text_field :street_address_1, placeholder: "Street", size: '35px'  %>
              </div><br>
              <!-- <div class="field">
                <%#= ff.label :street_address_2 %><br>
                <%#= ff.text_field :street_address_2 %>
              </div>
              <div class="field">
                <%#= ff.label :street_address_3 %><br>
                <%#= ff.text_field :street_address_3 %>
              </div> -->
              <div class="field">
                <%= ff.text_field :city, placeholder: "City", size: '35px'  %>
              </div><br>
              <div class="field">
                <%= ff.text_field :country, placeholder: "Country", size: '35px'  %>
              </div><br>
              <!-- <div class="field">
                <%#= ff.label :state %><br>
                <%#= ff.text_field :state %>
              </div>
              <div class="field">
                <%#= ff.label :district %><br>
                <%#= ff.text_field :district %>
              </div>
              <div class="field">
                <%#= ff.label :postal_code %><br>
                <%#= ff.text_field :postal_code %>
              </div> -->
            <% end %> <!-- end of address fields -->
            <div>
              <%= f.submit 'Create Trade Event', class:'btn btn-lg btn-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
