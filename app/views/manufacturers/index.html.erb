<h1>Listing Manufacturers</h1>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Shipping Port</th>
      <th>Contact Name</th>
      <th>Contact Email Address</th>
      <th>Contact Phone Number</th>
      <th>Street Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manufacturers.each do |manufacturer| %>
      <tr>
        <td><%= manufacturer.company_name %></td>
        <td><%= manufacturer.shipping_port %></td>
        <td><%= manufacturer.contact_name %></td>
        <td><%= manufacturer.email %></td>
        <td><%= manufacturer.phone_number %></td>
        <td><%= manufacturer.address.street_address_1 %> <%= manufacturer.address.street_address_2 %> <%= manufacturer.address.street_address_3 %></td>
        <td><%= link_to 'Show', manufacturer %></td>
        <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
        <td><%= link_to 'Destroy', manufacturer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

