<div >
  <div>
    <p>

      <strong><h5 class="search-list"><%= @manufacturer.company_name %></h5></strong>

    </p>
    <p>
      <!-- <h4>Contact Info:</h4> -->
      <%= @manufacturer.contact_name %><br>
      <!-- <%#= number_to_phone(@manufacturer.phone_number, area_code: true) %><br> -->
      <%= @manufacturer.email %><br>
    </p>
  </div>

  <div>
    <h4>Port City:</h4>
    <%= @manufacturer.shipping_port %>
  </div>

  <div>
    <!-- <h4>Manufacturer Address:</h4> -->
    <%= @manufacturer.address.street_address_1 %><br>

    <!-- <%= @manufacturer.address.city %>, <%= @manufacturer.address.state %> <%= @manufacturer.address.postal_code %><br> -->
    <%= @manufacturer.address.country %>
    <%#= @manufacturer.address.district %>
  </div>
</div>



<section id='wrap'>
  <div  class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead class='tbl-header'>
        <tr><strong>
          <!-- <th colspan="1"></th> -->
          <th>Product Name</th>
          <th>Item Number</th>
          <th>Minimum Order</th>
          <th>Price</th>
          <th class="description-width">Description</th>
        </strong></tr>
      </thead>
    </table>
  </div>

  <div  class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @manufacturer.products.each do |product| %>
        <tr><strong>
          <!-- <td><%#= link_to 'Edit', edit_product_path(product) %></td> -->
          <td><%= link_to product.name, product %></td>
          <td><%= product.item_number %></td>
          <td><%= product.min_order_quantity %></td>
          <td><%= number_to_currency((product.price * 0.01), precision: 2) %></td>
          <td class="description-width"><%= product.description %></td>
        </strong></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<script>
$(window).on("load resize ", function() {
  var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
  $('.tbl-header').css({'padding-right':scrollWidth});
}).resize();
</script>

