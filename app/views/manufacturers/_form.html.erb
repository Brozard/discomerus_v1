<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
      <div class="form-bottom">
        <h1><strong>Create New Manufacturer</strong></h1>

          <%= form_for(setup_addressable(@manufacturer)) do |f| %>
            <% if @manufacturer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@manufacturer.errors.count, "error") %> prohibited this manufacturer from being saved:</h2>

                <ul>
                <% @manufacturer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <%= f.fields_for :attending_manufacturer do |ff| %>
              <div class="field">
                <%= ff.label :trade_event_id %><br>
                <%= ff.collection_select :trade_event_id, TradeEvent.where(buyer_id: current_user.id), :id, :event_name, prompt: true %>
              </div>
            <% end %>

            <div class="field">
              <%= f.label :company_name %><br>
              <%= f.text_field :company_name, size:'35px' %>
            </div>
            <div class="field">
              <%= f.label :shipping_port %><br>
              <%= f.text_field :shipping_port, size:'35px' %>
            </div>
            <div class="field">
              <%= f.label :contact_name %><br>
              <%= f.text_field :contact_name, size:'35px' %>
            </div>
            <div class="field">
              <%= f.label :email %><br>
              <%= f.text_field :email, size:'35px' %>
            </div>
            <div class="field">
              <%= f.label :phone_number %><br>
              <%= f.text_field :phone_number, size:'35px' %>
            </div>

            <!-- beginning of address fields -->
            <%= f.fields_for :address do |ff| %>
              <div class="field">
                <%= ff.label :country %><br>
                <%= ff.text_field :country, size:'35px' %>
              </div>
              <div class="field">
                <%= ff.label :street_address_1 %><br>
                <%= ff.text_field :street_address_1, size:'35px' %>
              </div>
              <!-- <div class="field">
                <%#= ff.label :street_address_2 %><br>
                <%#= ff.text_field :street_address_2 %>
              </div>
              <div class="field">
                <%#= ff.label :street_address_3 %><br>
                <%#= ff.text_field :street_address_3 %> -->
              <!-- </div> -->
              <div class="field">
                <%= ff.label :city %><br>
                <%= ff.text_field :city, size:'35px' %>
              </div>
              <!-- <div class="field">
                <%#= ff.label :state %><br>
                <%#= ff.text_field :state %>
              </div>
              <div class="field">
                <%#= ff.label :district %><br>
                <%#= ff.text_field :district %>
              </div>
              <div class="field">
                <%#= ff.label :postal_code %><br>
                <%#= ff.text_field :postal_code %>
              </div> -->
            <% end %> <br> <!-- end of address fields -->

            <div>
              <%= f.submit class:'btn btn-lg btn-success' %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
