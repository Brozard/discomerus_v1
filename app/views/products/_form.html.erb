
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 form-box">
      <div class="form-bottom", style= 'width:150%;'>


<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="center-nested-divs">
    <div class="row-div-display">
      <div>
        <div class="field bottom-buffer">
          <%= f.label :name %><br>
          <%= f.text_field :name, size:'30px'  %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :item_number %><br>
          <%= f.text_field :item_number, size:'30px'  %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :min_order_quantity %><br>
          <%= f.text_field :min_order_quantity, size:'30px'  %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :price %><br>
          <%= f.text_field :price, size:'30px'  %>
        </div>
      </div>
      <div class="spacing">
        <!-- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; -->
      </div>
      <div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description, size:'35' %>
        </div>
      </div>
    </div>
  </div>

<br>

<div>
  <%= f.submit class:'btn btn-lg btn-success' %>
</div>
<% end %>
</div>


  </div>
</div>


</div>


