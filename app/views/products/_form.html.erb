<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="center-nested-divs">
    <div class="row-div-display">
      <div>
        <div class="field bottom-buffer">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :item_number %><br>
          <%= f.text_field :item_number %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :min_order_quantity %><br>
          <%= f.text_field :min_order_quantity %>
        </div>
        <div class="field bottom-buffer">
          <%= f.label :price %><br>
          <%= f.text_field :price %>
        </div>
      </div>
      <div class="spacing">
        <!-- &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; -->
      </div>
      <div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "description-entry" %>
        </div>
      </div>
    </div>
  </div>

<br>

  <div class="actions">
    <%= f.submit "Submit", class: "btn", id: "product-form" %>
  </div>
<% end %>

