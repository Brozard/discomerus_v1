<div>
  <p>
    <strong><h1>PRODUCT INDEX</h1></strong>
  </p>
</div>

<!-- Begin search functionality -->

<%= form_tag search_products_path do %>
  <ul class="search-list-render">
    <li>
      <%= search_field_tag :name, nil, placeholder: "Find by Product Name", class: "search-field force-black-text" %>
    </li>
    <li>
      <%= number_field :min_price, nil, in: 0..10000.00, step: "0.01", placeholder: "Min $", class: "search-field force-black-text" %>
    </li>
    <li>
      <%= number_field :max_price, nil, in: 0..10000.00, step: "0.01", placeholder: "Max $", class: "search-field force-black-text" %>
    </li>
    <li>
      <%= collection_select :category, nil, Category.all, :id, :category_name, {prompt: "Find by Category"}, {class: "search-field force-black-text"} %>
    </li>
    <li>
      <%= submit_tag "Apply Filter", class: "btn" %>
    </li>
  </ul>
<% end %>

<% if !@products.empty? %>
  <%= pluralize(@products.count, "product") %> found
<% else %>
  No products found
<% end %>  <!-- End search functionality -->

<br>
<%= link_to 'New Product', new_product_path, class: "btn-link-2" %>
<section id='wrap'>
  <div  class="tbl-header">
  <table cellpadding="0" cellspacing="0" border="0">
    <thead class='tbl-header'>
    <tr><strong>
      <th>Product Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Item Number</th>
      <th>Minimum Order</th>
      <th class="description-width">Description</th>
      <!-- <th>Pictures</th> -->
      <!-- <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th> -->
    </strong></tr>
  </thead>
</table>
</div>

<div  class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product, class: "btn-link-table-entry" %></td>
          <td><%= number_to_currency((product.price * 0.01), precision: 2) %></td>
          <td><%= product.show_category %></td>
          <td><%= product.item_number %></td>
          <td><%= product.min_order_quantity %></td>
          <td class="description-width"><%= product.description %></td>
          <!-- <td></td> -->
          <!-- <td><%#= link_to 'Show', product %></td> -->
          <!-- <td><%#= link_to 'Edit', edit_product_path(product) %></td> -->
          <!-- <td><%#= link_to 'Edit', edit_manufacturer_product_path(product.manufacturer, product) %></td> -->
          <!-- <td><%#= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</section>
<!-- Create local variable to store the id of all Products returned -->
<% ids = @products.pluck(:id) %>
<%= link_to "Download as CSV", "../reports/product.csv?options[id]=#{ids}" %>
<script>
  $(window).on("load resize ", function() {
    var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
      $('.tbl-header').css({'padding-right':scrollWidth});
  }).resize();
</script>
